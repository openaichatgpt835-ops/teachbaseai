# Teachbase AI — переменные окружения
# В ENV только глобальные секреты. Токены порталов — в БД, шифрованно.

APP_ENV=production
SECRET_KEY=REQUIRED-min-32-chars-random
DEBUG=false
DEBUG_ENDPOINTS_ENABLED=false

PUBLIC_BASE_URL=https://necrogame.ru

POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=teachbaseai
POSTGRES_USER=teachbaseai
POSTGRES_PASSWORD=REQUIRED

REDIS_HOST=redis
REDIS_PORT=6379

# Bitrix24 — глобальные ключи приложения (из настроек локального приложения в Bitrix24)
BITRIX_APP_CLIENT_ID=
BITRIX_APP_CLIENT_SECRET=

# Шифрование токенов порталов в БД (min 32 символа)
TOKEN_ENCRYPTION_KEY=REQUIRED-min-32-chars

# OCR (self-host): enable OCR for scanned PDFs when no text extracted
OCR_ENABLED=0

ADMIN_DEFAULT_EMAIL=admin@necrogame.ru
ADMIN_DEFAULT_PASSWORD=REQUIRED

JWT_SECRET=REQUIRED-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60
